<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/public_questioning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#1BB2C7"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/public_questioning_head_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/function_menu" />

        <TextView
            android:id="@+id/public_questioning_head_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/public_question"
            android:textColor="#fff"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/public_questioning_remine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/function_remine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_item_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/public_questioning"
        android:layout_marginTop="17dp"
        android:background="#EEEEF9"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_item_1_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/choose_dis_history"
            android:textColor="#333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_item_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:contentDescription="@string/public_question"
            android:src="@drawable/todown" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/real_item_1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela_item_1" >

        <TextView
            android:id="@+id/item_1_1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/textview_background"
            android:text="@string/public_other"
            android:textColor="#1BB2C7"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/item_1_1_edit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/item_1_1_tv"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/edittext_background"
            android:hint="@string/write_dis_history"
            android:maxEms="100"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_item_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/real_item_1_1"
        android:layout_marginTop="13dp"
        android:background="#EEEEF9"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/item_2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/choose_symptom"
            android:textColor="#333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/item_2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:contentDescription="@string/public_question"
            android:src="@drawable/todown" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/real_item_2_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela_item_2"
        android:paddingBottom="13dp"
        android:paddingLeft="12dp"
        android:paddingTop="13dp" >

        <TextView
            android:id="@+id/item_2_2_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_background"
            android:text="@string/public_other"
            android:textColor="#1BB2C7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_2_2_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/item_2_2_tv_1"
            android:background="@drawable/textview_background"
            android:text="@string/choose_sick"
            android:textColor="#1BB2C7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_2_2_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/item_2_2_tv_2"
            android:background="@drawable/textview_background"
            android:text="@string/public_other"
            android:textColor="#1BB2C7"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_item_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/real_item_2_2"
        android:background="#EEEEF9"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/item_3_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/duration"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_3_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@+id/item_3_iv"
            android:background="@drawable/textview_background"
            android:text="@string/duraing_time"
            android:textColor="#1BB2C7"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/item_3_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/item_3_tv_1"
            android:contentDescription="@string/public_question"
            android:src="@drawable/todown" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_item_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rela_item_3"
        android:layout_marginTop="17dp"
        android:background="#EEEEF9"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/item_4_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:text="@string/choose_medicine"
            android:textColor="#333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/item_4_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:contentDescription="@string/public_question"
            android:src="@drawable/todown" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/real_item_4_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela_item_4"
        android:paddingBottom="13dp"
        android:paddingLeft="12dp"
        android:paddingTop="13dp" >

        <TextView
            android:id="@+id/item_4_4_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_background"
            android:text="@string/public_other"
            android:textColor="#1BB2C7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_4_4_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/item_4_4_tv_1"
            android:background="@drawable/textview_background"
            android:text="@string/choose_sick"
            android:textColor="#1BB2C7"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_4_4_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/item_4_4_tv_2"
            android:background="@drawable/textview_background"
            android:text="@string/public_other"
            android:textColor="#1BB2C7"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/bottom_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/real_item_4_4">
        <Button 
            android:id="@+id/btn_commit"
            android:layout_width="250dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"
            android:background="@drawable/btn_commit"
            android:textColor="#FFF"
            android:text="@string/commit"/>
    </RelativeLayout>
</RelativeLayout>