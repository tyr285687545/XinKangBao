<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
   	<TextView
	    android:id="@+id/chat_left_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:width="30dip"/>
    
	<RelativeLayout 
	    android:id="@+id/rl_chat_left"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_left_name"
        android:background="@drawable/chat_left">
       
    <TextView
        android:id="@+id/message_chat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="160dip"/>
	</RelativeLayout>
	
	
	<TextView
	    android:id="@+id/sendtime_chat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_left_name"
        android:layout_below="@id/rl_chat_left"
        android:textSize="10sp" />

	<TextView
	    android:id="@+id/chat_left_tel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/rl_chat_left"/>

</RelativeLayout>