<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" 
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="10dip"
    android:paddingBottom="9dip">   
    
	      	<LinearLayout
	      	    android:layout_width="fill_parent"
	      	    android:layout_height="wrap_content"
	      	    android:orientation="horizontal" >

		        <TextView android:id="@+id/doc_name"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			       	android:textSize="15.0dip"
			       	android:textStyle="bold"
	     			android:textColor="@color/listitem_black"
			        />
		        
		        <TextView android:id="@+id/doc_major"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="10.0dip" 
		            android:layout_marginLeft="10dip"/>
	        
	        	<TextView android:id="@+id/doc_tel"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	           	 	android:textSize="10.0dip"
	           	 	android:visibility="gone" />
	        
	       		<TextView android:id="@+id/doc_isonline"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:textSize="10.0dip" 
	            	android:visibility="gone"/>
	       		
	       		<TextView android:id="@+id/weidu_mes_no"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	           	 	android:textSize="10.0dip" />
	       	 </LinearLayout>
	       	 
	      	<LinearLayout android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
		        
		        <TextView android:id="@+id/doc_dept"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="10.0dip" />
	</LinearLayout>
</LinearLayout>
