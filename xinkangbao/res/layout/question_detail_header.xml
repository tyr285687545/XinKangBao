<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_detail_header"
   	android:layout_width="fill_parent"
   	android:layout_height="40dip"
   	android:background="@drawable/widget_head_bg">
   
  	
   	<ImageView 
   		android:id="@+id/question_detail_back"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content" 
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
	   	android:layout_marginLeft="5.0dip"
	   	android:background="@drawable/head_back"/>
   	
   	
   	<TextView 
   	    android:id="@+id/question_detail_head_title"
   	    style="@style/detail_head_title"
   	    android:layout_gravity="center"
   	    android:text="帖子正文"
   	    android:visibility="gone" />
   	
   	<ProgressBar 
		android:id="@+id/question_detail_head_progress" 
		style="@style/loading_small"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="10.0dip"/>
   
   	<ImageView 
   		android:id="@+id/question_detail_refresh"
	   	android:layout_width="wrap_content" 
	   	android:layout_height="wrap_content" 
	   	android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
	   	android:layout_marginRight="2.0dip"
	   	android:clickable="true" 
	   	android:background="@drawable/head_refresh"
		android:visibility="gone"/>
   	
</RelativeLayout>
