<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:background="#1BB2C7" >

        <ImageView
            android:id="@+id/person_iv"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:contentDescription="@string/app_name"
            android:padding="7dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/person_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:text="@string/my"
            android:textColor="#fff"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/person_remine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/function_remine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_head"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@+id/person"
        android:background="@drawable/personinfobg" >

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="11dp"
            android:contentDescription="@string/my"
            android:src="@drawable/defaulthead" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linear_tag"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img_head"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/linear_tag"
            android:layout_width="4dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_head"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_tag"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/img_head"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_toright"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/person_right" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cut_line"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@+id/top_head"
        android:background="#EEEEF9"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/item_1"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/cut_line"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/myappo" />

        <TextView
            android:id="@+id/tv_myappoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/portrait"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/myappoin" />

        <ImageView
            android:id="@+id/portrait_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/toright" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cut_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#C1C1C1" />

    <RelativeLayout
        android:id="@+id/item_2"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/cut_line1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/mydoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/mydoc" />

        <TextView
            android:id="@+id/tv_mydoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/mydoc"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/my_doctor" />

        <ImageView
            android:id="@+id/mydoc_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/toright" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cut_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#C1C1C1" />

    <RelativeLayout
        android:id="@+id/item_3"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/cut_line2"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/manager" />

        <TextView
            android:id="@+id/tv_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/manager"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/manager" />

        <ImageView
            android:id="@+id/manager_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/toright" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cut_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#C1C1C1" />

    <RelativeLayout
        android:id="@+id/item_4"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_below="@+id/cut_line3"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/changepsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/changepsw" />

        <TextView
            android:id="@+id/tv_changepsw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/changepsw"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/changepsw" />

        <ImageView
            android:id="@+id/changepsw_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:contentDescription="@string/app_name"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@drawable/toright" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/cut_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_4"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#C1C1C1" />

    <Button
        android:id="@+id/btn_out_loading"
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_out_loading"
        android:text="@string/outloading"
        android:textColor="#FFF"
        android:textSize="16sp" />

</RelativeLayout>